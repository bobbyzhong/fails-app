<html>
    <head>
        {{> header}}
    </head>
    <body>
        {{> menu}}
        <div class="container">
            <h1>My Posts</h1>
            <div class="list-group">
                {{#posts}}

                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ title }}</h5>
                </div>
                <p class="mb-1">{{ body }}</p>

                <div class="article-action-button">
                    <a href="/users/posts/edit/{{ postid }}">
                        <button type="button" class="btn btn-primary">
                            Edit
                        </button>
                    </a>

                    <form action="/users/delete-post" method="POST">
                        <input
                            type="hidden"
                            name="postId"
                            value="{{ postid }}"
                        />
                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </div>

                {{/posts}}
            </div>
        </div>

        {{> footer}}
    </body>
</html>
